<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_play_background"
    tools:context="com.example.vuminhduc.duoihinhbatchu.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/round" />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@drawable/avatar_icon" />

        <TextView
            android:id="@+id/tv_tim"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/heart"
            android:gravity="center"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/coin_icon" />

        <TextView
            android:id="@+id/tv_diem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="288dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-12dp"
        android:background="@drawable/next"
        android:text="Câu Tiếp"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/btn_next"
        android:layout_marginTop="-15dp"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="-15dp"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LinearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearXam_1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linearXam_2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/linearPick"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/linearPick1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPick2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
